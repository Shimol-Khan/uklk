<%= simple_form_for(@report) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title, label: false, placeholder:'Title' %>
    <%= f.input :message, label: false, placeholder:'Your message', input_html:{rows: 6} %>
    <%= f.association :user, as: :hidden %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Submit",:class=>"btn btn-sm btn-success" %>
    <%= link_to "Back", reports_path, :class=>"btn btn-sm btn-primary"%>
  </div>
<% end %>
