
<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :message, label: false, placeholder:'Your message', input_html:{rows: 6} %>
    <%= f.association :user, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send",:class=>"btn btn-sm btn-success" %>
    <%= link_to "Back", contacts_path, :class=>"btn btn-sm btn-primary"%>
  </div>
<% end %>
